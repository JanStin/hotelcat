mixin slide-show(options)
    .slide-show 
        img(src="img/" + options.img[0], class="slide-show__main slide-show__js")
        img(src="img/" + options.img[1], class="slide-show__additional slide-show__additional_one slide-show__js")
        img(src="img/" + options.img[2], class="slide-show__additional slide-show__additional_two slide-show__js")
        img(src="img/" + options.img[3], class="slide-show__additional slide-show__additional_three slide-show__js")

