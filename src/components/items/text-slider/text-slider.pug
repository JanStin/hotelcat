mixin text-slider(options)
    .owl-carousel
        -for (var i = 0; i < options.text.length; i++)
            .text-slider
                .text-slider__quote “
                .text-slider__content 
                    .text-slider__text= options.text[i] 
                    .text-slider__footer 
                        .text-slider__autor= options.autor[i] 
                        .text-slider__date= options.date[i] 

