        .menu__logo
            img(src="img/logo.svg", alt="logo")
        .hamburger-menu
            <input id="menu__toggle" type="checkbox" />
            <label class="menu__btn" for="menu__toggle">
            <span></span>
            </label>

            ul.menu__box
                li 
                    a(href="#" class="menu__item") Почему мы?
                li 
                    a(href="#" class="menu__item") Номера
                li 
                    a(href="#" class="menu__item") Отзывы
                li 
                    a(href="#" class="menu__item") Контакты
                li.menu__item.menu__item_number 8 (800) 333-55-99
                li.menu__item
                    .mapblock__social 
                        a(href="#")
                            img(src="img/facebook.svg", alt="facebook" class='mapblock__icon')
                        a(href="#")
                            img(src="img/instagram.svg", alt="instagram" class='mapblock__icon')
                        a(href="#")
                            img(src="img/vk.svg", alt="vk" class='mapblock__icon')

